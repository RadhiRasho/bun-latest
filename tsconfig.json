{
	"compilerOptions": {
		// Enable latest features
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"allowJs": true,
		// Bundler mode
		"moduleResolution": "Bundler",
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": true,
		"outDir": "./dist",
	},
	"include": [
		"./src"
	]
}